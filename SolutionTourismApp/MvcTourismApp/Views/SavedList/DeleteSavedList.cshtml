@model DeleteSavedListViewModel

@{
    ViewData["Title"] = "Delete Saved List";
}

<div class="container mt-5">
    <h2 class="mb-3 text-danger">Are you sure you want to delete this Saved List?</h2>
    <h5 class="text-muted mb-4">View the details below and make your decision.</h5>

    <div class="card shadow-sm rounded-3 p-4 mb-4 custom-card">
        <div class="card-body">
            <h4 class="card-title mb-2">@Model.Name</h4>

            <p class="text-muted mb-3">
                <i>@Model.Description</i>
            </p>

            <div class="mb-2">
                <strong>@Model.CountOfAttractions attraction(s)</strong>
            </div>

            <div>
                <strong>Created on:</strong><br />
                @Model.DateCreated.Value.ToString("MMMM d, yyyy")
            </div>
        </div>
    </div>

    <div class="d-flex gap-3">
        <a asp-action="GetSavedListDetails" asp-route-savedListId="@Model.SavedListId" class="btn btn-secondary">
            Cancel
        </a>

        <form asp-action="DeleteSavedList" method="post">
            <input type="hidden" asp-for="SavedListId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
