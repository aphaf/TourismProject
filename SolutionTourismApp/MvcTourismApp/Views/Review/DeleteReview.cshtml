@model DeleteReviewViewModel

@{
    ViewData["Title"] = "Delete Review";
}

<div class="container mt-5">
    <h2 class="mb-3 text-danger">Are you sure you want to delete this review?</h2>
    <h5 class="text-muted mb-4">View the details below and make your decision.</h5>

    <div class="card shadow-sm rounded-3 p-4 mb-4 custom-card">
        <div class="card-body">
            <h4 class="card-title mb-2">@Model.Title</h4>

            <p class="text-muted mb-3">
                <i>@Model.Description</i>
            </p>

            <div class="mb-2">
                <strong>Attraction:</strong><br />
                @Model.AttractionName<br />
                <i>@Model.AttractionFullAddress</i>
            </div>

            <div class="mb-2">
                <strong>Rating:</strong><br />
                @Html.Raw(Model.RatingStarIcons)
                <br />
                <span class="text-muted">@Model.Rating star(s)</span>
            </div>

            <div>
                <strong>Created on:</strong><br />
                @Model.DateCreated.ToString("MMMM d, yyyy")
            </div>
        </div>
    </div>

    <div class="d-flex gap-3">
        <a asp-controller="Review" asp-action="ListAllReviewsForUser" class="btn btn-secondary">
            Cancel
        </a>

        <form asp-controller="Review" asp-action="DeleteReview" method="post">
            <input type="hidden" asp-for="ReviewId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
    </div>
</div>
